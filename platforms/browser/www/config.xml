<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="5" id="com.rmi.drumpad" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DrumPad</name>
    <description>
        Drum machine for music lovers.
    </description>
    <author email="ricardomillauro@gmail.com">
        ricardomillauro
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
</widget>
